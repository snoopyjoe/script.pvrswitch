<?xml version="1.0" encoding="UTF-8"?>
<addon id="script.pvrswitch" version="1.0.6" name="PVR Switch" provider-name="snoopyjoe">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
      <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" name="pvrswitch.service" library="service.py" />
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_GB">PVR Switch</summary>
        <description lang="en_GB">Toggles PVR Manager off and on when PVR client loads with no data.</description>
        <news>
            - Add optional "Delete Crash logs" feature during boot
        </news>
    </extension>
</addon>
